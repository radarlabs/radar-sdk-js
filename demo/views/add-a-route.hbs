            $('#route').val(DEFAULT_POLYLINE);


            Radar.initialize(publishableKey, { debug: true });

            // prevent duplicate maps
            if (map) {
              map.remove();
            }

            map = Radar.ui.map({
              container: 'map',
            });

            // initial load
            map.on('load', () => {
              addPolyline(map, route, format);
            });

            map.on('error', (err) => {
