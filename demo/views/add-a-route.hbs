          const addPolyline = (map, route, format) => {
            map.clearFeatures();
            map.clearMarkers();

            let precision;
            if (format === 'polyline6') {
              precision = 6;
            } else if (format === 'polyline5') {
              precision = 5;
            }

            map.addPolyline(route, {
              precision,
              fitOptions: {
                padding: 20,
              },
              onClick: (e, feature) => {
                Radar.ui.marker({
                  text: `${route.slice(0, 6)}...`,
